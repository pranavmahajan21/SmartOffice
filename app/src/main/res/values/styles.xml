<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:layout_marginTop">0dp</item>-->
    </style>

    <!-- Dimensions -->
    <style name="dimensions">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dimensions2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dimensions3">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Dimensions -->

    <!-- Used on MeetingDetailsActivity -->
    <style name="LL" parent="dimensions">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="IV">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="TV" parent="dimensions2">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>
    <!-- Used on MeetingDetailsActivity -->

    <!-- Used on MeetingAddActivity -->
    <style name="ET" parent="dimensions">
        <item name="android:background">#FFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RL" parent="ET">
        <item name="android:clickable">true</item>
        <item name="android:onClick">onPickDateTime</item>
    </style>
    <!-- Used on MeetingAddActivity -->

    <!-- Used on PeopleDetailsActivity -->
    <style name="TV2" parent="dimensions2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TV3" parent="dimensions2">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <!-- Used on PeopleDetailsActivity -->

    <!-- Used on CalendarActivity2 -->
    <style name="TV4" parent="dimensions3">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>
    <!-- Used on CalendarActivity2 -->
</resources>
