<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mw.andhraapp.activity.PeopleDetailActivity">

    <include
        android:id="@+id/actionBar_T"
        layout="@layout/actionbar_custom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <!--android:background="@drawable/custom_bg_one_side_bottom"-->

        <ImageView
            android:id="@+id/profilePic_IV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/hello_world"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_bg_solid_white_radius"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/contactDetailsLabel_TV"
            style="@style/dimensions2"
            android:layout_marginTop="0dp"
            android:text="Contact Details"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <TextView

            android:id="@+id/departmentLabel_TV"
            style="@style/TV2"
            android:text="Department" />

        <TextView
            android:id="@+id/department_TV"
            style="@style/TV3"
            android:text="New Text" />

        <TextView
            android:id="@+id/designationLabel_TV"
            style="@style/TV2"
            android:text="Designation" />

        <TextView
            android:id="@+id/designation_TV"
            style="@style/TV3"
            android:text="New Text" />

        <TextView
            android:id="@+id/emailLabel_TV"
            style="@style/TV2"
            android:text="EMail" />

        <TextView
            android:id="@+id/email_TV"
            style="@style/TV3"
            android:text="New Text" />

        <TextView
            android:id="@+id/phoneLabel_TV"
            style="@style/TV2"
            android:text="Phone Number" />

        <TextView
            android:id="@+id/phone_TV"
            style="@style/TV3"
            android:text="New Text" />
    </LinearLayout>


</LinearLayout>
