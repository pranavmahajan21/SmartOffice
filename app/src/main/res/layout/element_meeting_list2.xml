<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:weightSum="300">

    <TextView
        android:id="@+id/startDateTime_TV"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="74"
        android:gravity="center_horizontal"
        android:text="Text"
        android:textSize="16sp" />

    <View
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:background="#000" />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="224"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/subject_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/attendees_TV"
            android:layout_below="@+id/subject_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/noMeeting_TV"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:hint="(Tap to add Meeting)"
            android:visibility="gone"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>
